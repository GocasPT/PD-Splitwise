<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="homePane" prefHeight="600.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/20.0.1"
            fx:controller="pt.isec.a2021138502.PD_Splitwise.ui.controller.GroupController">
    <bottom>
        <HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <children>
                <Button fx:id="btnGroups" mnemonicParsing="false" text="Groups" HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnInvites" layoutX="184.0" layoutY="48.0" mnemonicParsing="false" text="Invites"
                        HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnUser" layoutX="210.0" layoutY="48.0" mnemonicParsing="false" text="User"
                        HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
    </bottom>
    <center>
        <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
            <children>
                <Text fx:id="txtGroupName" strokeType="OUTSIDE" strokeWidth="0.0" text="Text"/>
                <HBox alignment="TOP_RIGHT">
                    <children>
                        <Button fx:id="btnEdit" mnemonicParsing="false" text="Edit"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Button fx:id="btnInvite" mnemonicParsing="false" text="Invite"/>
                        <Button fx:id="btnExit" mnemonicParsing="false" text="Exit"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
