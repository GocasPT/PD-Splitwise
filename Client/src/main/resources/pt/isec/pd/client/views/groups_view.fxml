<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/20.0.1"
            fx:controller="pt.isec.pd.client.ui.controller.view.GroupsController">
    <top>
        <VBox alignment="CENTER">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Groups" textAlignment="CENTER">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Text>
            <Button fx:id="btnCreateGroup" mnemonicParsing="false" text="Create Group">
                <font>
                    <Font size="13.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="8.0"/>
                </VBox.margin>
            </Button>
            <Separator prefWidth="200.0"/>
        </VBox>
    </top>
    <center>
        <VBox fx:id="vbGroups" alignment="TOP_CENTER"/>
    </center>
    <bottom>
        <fx:include source="../components/navbar.fxml"/>
    </bottom>
</BorderPane>
