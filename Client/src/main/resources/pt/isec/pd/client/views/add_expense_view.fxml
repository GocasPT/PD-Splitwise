<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.CheckComboBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/20.0.1"
            fx:controller="pt.isec.pd.client.ui.controller.view.AddExpenseController">
    <top>
        <VBox alignment="TOP_CENTER" spacing="8.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="8.0"/>
            </padding>
            <Text fx:id="txtGroupName" strokeType="OUTSIDE" strokeWidth="0.0" text="[GROUP NAME]"
                  textAlignment="CENTER">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Text>
            <Separator prefWidth="200.0"/>
        </VBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" maxWidth="-Infinity" prefWidth="300.0" spacing="8.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="64.0"/>
            </padding>
            <HBox alignment="CENTER" spacing="8.0">
                <Label text="Amount:">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="tfAmount"/>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="254.0" spacing="8.0">
                <Label text="Description:">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <TextArea fx:id="tfDescription" prefHeight="50.0" prefWidth="200.0"/>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="208.0" spacing="8.0">
                <Label text="Date:">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <DatePicker fx:id="datePicker"/>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="350.0" spacing="8.0">
                <Label text="Payer:">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="cbPayerUser"/>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="369.0" spacing="8.0">
                <Label text="User associated:">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <CheckComboBox fx:id="ccbAssociatedUsers"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <VBox alignment="BOTTOM_CENTER" spacing="8.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="12.0"/>
            </padding>
            <Separator prefWidth="200.0"/>
            <HBox alignment="BOTTOM_CENTER" spacing="12.0">
                <Button fx:id="btnAdd" mnemonicParsing="false" text="Add">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Button>
                <Button fx:id="btnCancel" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Cancel">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Button>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
